  <section class="intro">
    <h1>{{ site_title }}</h1>
  </section>
  
  <section class="form-container">
    <h1>I am contacting you for</h1>
    {{ post.content }}
  </section>

  <section id="shop-foot-link" class="nav-shortcut strawberry">
      <svg id="filler-svg" class="filler-svg others top" preserveAspectRatio="meet" viewBox="0 0 1920 637.3" >
